  "basePath": "/api/v1",
  "tags": [
    {
      "name": "public",
      "description": "Public methods are available without authentication",
      "externalDocs": {
        "description": "Find out more",
        "url": "http://www.genome3d.eu/"
      }
    },
    {
      "name": "private",
      "description": "Secure methods require authentication",
      "externalDocs": {
        "description": "Find out more",
        "url": "http://www.genome3d.eu/"
      }
    },
    {
      "name": "auth",
      "description": "Authenticate connection to provide access to private methods"
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/classification/list": {
      "get": {
        "tags": [ "public" ],
        "summary": "List all the releases of domain classifications",
        "operationId": "listClassificationReleases",
        "description": "",
        "x-no-auth": 1,
        "x-mojo-to": "classification#list_releases",
        "produces": [ "application/json" ],
        "responses": {
          "200": {
            "description": "Successfully returned list of classification releases"
          },
          "default": {
            "description": "Unexpected error"
          }
        }
      }
    },
    "/classification/{release_id}/domain/{domain_id}": {
      "get": {
        "tags": [ "public" ],
        "summary": "Get information about a particular domain from a classification release",
        "operationId": "getClassificationDomain",
        "description": "",
        "x-no-auth": 1,
        "x-mojo-to": "classification#get_domain",
        "produces": [ "application/json" ],
        "parameters": [
          {
            "in": "path",
            "name": "release_id",
            "description": "ID of classification release (e.g '7')",
            "type": "string",
            "required": true
          },
          {
            "in": "path",
            "name": "domain_id",
            "description": "ID of domain to return (e.g. '1cukA01')",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully returned domain"
          },
          "401": {
            "description": "Domain not found"
          },
          "default": {
            "description": "Unexpected error"
          }
        },
        "security": []
      }
    },
    "/uniprot/{uniprot_acc}/structure_prediction": {
      "parameters": [
        {
          "name": "uniprot_acc",
          "in": "path",
          "description": "Accession of UniProtKB entry",
          "required": true,
          "type": "string"
        }
      ],
			"get": {
				"tags": [ "public" ],
				"summary": "List all structural prediction(s) for a given UniProtKB entry",
        "operationId": "listStructurePredictions",
				"description": "",
				"x-mojo-to": "StructurePrediction#list",
        "x-no-auth": 1,
				"produces": [
					"application/json"
				],
				"responses": {
					"200": {
						"description": "Successfully listed all structural models"
					},
					"204": {
				    "description": "UniProtKB not found"
				  },
				  "405": {
				    "description": "Invalid input"
					}
				}
			}
    },
    "/uniprot/{uniprot_acc}/structure_prediction/{resource_id}": {
      "parameters": [
        {
          "name": "uniprot_acc",
          "in": "path",
          "description": "Accession of UniProtKB entry",
          "required": true,
          "type": "string"
        },
        {
          "name": "resource_id",
          "in": "path",
          "description": "Resource ID for the structural prediction",
          "required": true,
          "type": "string"
        }
      ],
			"get": {
				"tags": [ "public" ],
				"summary": "Get structural prediction(s) for a given UniProtKB / Resource",
				"description":"",
        "operationId": "getStructurePrediction",
				"x-mojo-to": "StructurePrediction#get",
        "x-no-auth": 1,
				"produces": [
					"application/json"
				],
				"responses": {
					"200": {
						"description": "Successfully returns structural models"
					},
					"401": {
						"description": "Unauthorised"
					},
					"204": {
				    "description": "UniProtKB / Resource not found"
				  },
				  "405": {
				    "description": "Invalid input"
					}
				}
			},
      "post": {
        "tags": [ "private" ],
        "summary": "Add a new 3D structure prediction",
        "description": "",
        "operationId": "addStructurePrediction",
        "x-mojo-to": "StructurePrediction#add",
        "consumes": [
          "multipart/form-data"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "formData",
            "name": "pdbfiles",
            "type": "file",
            "description": "PDB file for structural prediction"
          }
        ],
        "responses": {
				  "201": {
						"description": "Successfully added entries"
					},
          "401": {
            "description": "Unauthorised"
          },
          "404": {
            "description": "UniProtKB / Resource not found"
          },
          "405": {
            "description": "Invalid input"
          }
        },
        "security": [
          {
            "genome3d_auth": [
              "write:structure_prediction",
              "read:structure_prediction"
            ]
          }
        ]
      },
      "put": {
        "tags": [ "private" ],
        "summary": "Update an existing 3D structure prediction",
        "description": "",
        "operationId": "updateStructurePrediction",
        "x-mojo-to": "StructurePrediction#update",
        "consumes": [
          "chemical/x-pdb"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "formData",
            "name": "pdbfiles",
            "type": "file",
            "description": "PDB file for structural prediction"
          }
        ],
        "responses": {
          "401": {
            "description": "Unauthorised"
          },
          "404": {
            "description": "UniProtKB / Resource not found"
          },
          "405": {
            "description": "Invalid input"
          },
					"200": {
						"description": "Successfully updated entry"
					}
        },
        "security": [
          {
            "genome3d_auth": [
              "write:structure_prediction",
              "read:structure_prediction"
            ]
          }
        ]
      },
      "delete": {
        "tags": [ "private" ],
        "summary": "Deletes a 3D structure prediction",
        "description": "",
        "operationId": "deleteStructurePrediction",
        "x-mojo-to": "StructurePrediction#delete",
        "produces": [
          "application/json"
        ],
        "parameters": [
        ],
        "responses": {
          "400": {
            "description": "Invalid ID supplied"
          },
          "401": {
            "description": "Unauthorised"
          },
          "404": {
            "description": "UniProtKB / Resource not found"
          },
          "200": {
						"description": "Successfully deleted entry"
					}
        },
        "security": [
          {
            "genome3d_auth": [
              "write:structure_prediction",
              "read:structure_prediction"
            ]
          }
        ]
      }
    },
    "/uniprot/{uniprot_acc}/domain_prediction/{resource_id}": {
      "parameters": [
        {
          "name": "uniprot_acc",
          "in": "path",
          "description": "Accession of UniProtKB entry",
          "required": true,
          "type": "string"
        },
        {
          "name": "resource_id",
          "in": "path",
          "description": "Resource ID for the domain prediction",
          "required": true,
          "type": "string"
        }
      ],
			"get": {
				"tags": [ "public" ],
				"summary": "Get domain prediction(s) for a given UniProtKB / Resource",
				"description":"",
        "operationId": "getDomainPrediction",
				"x-mojo-to": "DomainPrediction#get",
        "x-no-auth": 1,
				"produces": [
					"application/json"
				],
				"responses": {
					"200": {
						"description": "Successfully returned domain prediction"
					},
					"401": {
						"description": "Unauthorised"
					},
					"204": {
				    "description": "Prediction not found for UniProtKB / Resource"
				  },
				  "405": {
				    "description": "Invalid input"
					}
				},
        "security": []
			},
      "post": {
        "tags": [ "private" ],
        "summary": "Add a new domain prediction",
        "description": "",
        "operationId": "addDomainPrediction",
        "x-mojo-to": "DomainPrediction#add",
        "consumes": [
          "multipart/form-data"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "formData",
            "name": "xmlfile",
            "type": "file",
            "description": "XML file for domain prediction"
          }
        ],
        "responses": {
				  "201": {
						"description": "Successfully added entry"
					},
          "401": {
            "description": "Unauthorised"
          },
          "404": {
            "description": "Entry not found for UniProtKB / Resource"
          },
          "405": {
            "description": "Invalid input"
          }
        },
        "security": [
          {
            "genome3d_auth": [
              "write:domain_prediction",
              "read:domain_prediction"
            ]
          }
        ]
      },
      "put": {
        "tags": [ "private" ],
        "summary": "Update an existing domain prediction",
        "description": "",
        "operationId": "updateDomainPrediction",
        "x-mojo-to": "DomainPrediction#update",
        "consumes": [
          "chemical/x-pdb"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "formData",
            "name": "xmlfile",
            "type": "file",
            "description": "XML file for domain prediction"
          }
        ],
        "responses": {
          "401": {
            "description": "Unauthorised"
          },
          "404": {
            "description": "Entry not found for UniProtKB / Resource"
          },
          "405": {
            "description": "Invalid input"
          },
					"201": {
						"description": "Successfully updated entry"
					}
        },
        "security": [
          {
            "genome3d_auth": [
              "write:domain_prediction",
              "read:domain_prediction"
            ]
          }
        ]
      },
      "delete": {
        "tags": [ "private" ],
        "summary": "Deletes a domain prediction",
        "description": "",
        "operationId": "deleteDomainPrediction",
        "x-mojo-to": "DomainPrediction#delete",
        "produces": [
          "application/json"
        ],
        "parameters": [
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "400": {
            "description": "Invalid ID supplied"
          },
          "401": {
            "description": "Unauthorised"
          },
          "204": {
            "description": "Entry not found for UniProtKB / Resource"
          }
        },
        "security": [
          {
            "genome3d_auth": [
              "write:domain_prediction",
              "read:domain_prediction"
            ]
          }
        ]
      }
    },
    "/uniprot/{uniprot_acc}": {
      "get": {
        "tags": [ "public" ],
        "summary": "Find UniProtKB sequence by accession",
        "description": "Returns a single UniProtKB entry",
        "operationId": "getUniprot",
        "x-mojo-to": "uniprot#get",
        "x-no-auth": 1,
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "uniprot_acc",
            "in": "path",
            "description": "Accession of UniProtKB entry to return (eg 'P00520')",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "object"
            }
          },
          "400": {
            "description": "Invalid ID supplied"
          },
          "401": {
            "description": "Unauthorised"
          },
          "404": {
            "description": "UniProtKB accession not found"
          }
        },
        "security": []
      }
    },
    "/resource/list": {
      "get": {
        "tags": [ "public" ],
        "summary": "List resources",
        "description": "",
        "operationId": "listResources",
				"x-mojo-to": "Resource#list",
        "x-no-auth": 1,
        "produces": [
          "application/json"
        ],
        "responses": {
          "default": {
            "description": "successful operation"
          }
        },
        "security": []
      }
    },
    "/user/login": {
      "get": {
        "tags": [ "auth" ],
        "summary": "Logs user into the system",
        "description": "",
        "operationId": "loginUser",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "username",
            "in": "query",
            "description": "The user name for login",
            "required": true,
            "type": "string"
          },
          {
            "name": "password",
            "in": "query",
            "description": "The password for login in clear text",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "string"
            },
            "headers": {
              "X-Rate-Limit": {
                "type": "integer",
                "format": "int32",
                "description": "calls per hour allowed by the user"
              },
              "X-Expires-After": {
                "type": "string",
                "format": "date-time",
                "description": "date in UTC when token expires"
              }
            }
          },
          "400": {
            "description": "Invalid username/password supplied"
          }
        }
      }
    },
    "/user/logout": {
      "get": {
        "tags": [ "auth" ],
        "summary": "Logs out current logged in user session",
        "description": "",
        "operationId": "logoutUser",
        "produces": [
          "application/json"
        ],
        "parameters": [],
        "responses": {
          "default": {
            "description": "successful operation"
          }
        }
      }
    },
    "/user/{username}": {
      "get": {
        "tags": [ "auth" ],
        "summary": "Get user by user name",
        "description": "",
        "operationId": "getUserByName",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "username",
            "in": "path",
            "description": "The name that needs to be fetched. ",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "400": {
            "description": "Invalid username supplied"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    }
  },
  "securityDefinitions": {
    "genome3d_auth": {
      "type": "oauth2",
      "tokenUrl": "/oauth/access_token",
      "flow": "password",
      "scopes": {
        "write:domain_prediction": "modify domain prediction in your account",
        "write:structure_prediction": "modify 3D structure prediction in your account"
      }
    }
  },
  "definitions": {
    "Domain": {
      "type": "object"
    },
    "PDB": {
      "type": "string"
    },
    "UniprotAcc": {
      "type": "string"
    },
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "username": {
          "type": "string"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        },
        "userStatus": {
          "type": "integer",
          "format": "int32",
          "description": "User Status"
        }
      },
      "xml": {
        "name": "User"
      }
    },
    "ApiResponse": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "type": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      }
    }
  },
  "externalDocs": {
    "description": "Find out more about Genome3D",
    "url": "http://www.genome3d.eu"
  }
}
